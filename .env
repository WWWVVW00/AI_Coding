# 生产环境配置文件

# API服务器地址 (使用相对路径，通过nginx代理)
VITE_API_URL=/api

# 应用配置
VITE_APP_NAME=学习助手
VITE_APP_VERSION=1.0.0

# 文件上传配置
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,jpg,png,gif,webp,zip,rar,7z

# 功能开关
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_PAPER_GENERATION=true

# 调试模式
VITE_DEBUG_MODE=false